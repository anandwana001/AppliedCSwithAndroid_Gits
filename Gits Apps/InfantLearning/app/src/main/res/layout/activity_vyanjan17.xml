        android:textSize="150dp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button40"
        android:layout_alignEnd="@+id/textView30"
        android:layout_alignRight="@+id/textView30"
        android:layout_marginBottom="68dp"
        android:text="थरमस"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button40"
        android:layout_toStartOf="@+id/button40"
        app:srcCompat="@drawable/tharmas" />
</RelativeLayout>
