        android:textSize="100dp" />

    <TextView
        android:id="@+id/textView142"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button150"
        android:layout_alignEnd="@+id/button150"
        android:layout_alignRight="@+id/button150"
        android:layout_marginBottom="59dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:text="Xylophone"
        android:textSize="50dp"/>

    <ImageView
        android:id="@+id/imageView73"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button149"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        app:srcCompat="@drawable/xylophone" />
</RelativeLayout>
