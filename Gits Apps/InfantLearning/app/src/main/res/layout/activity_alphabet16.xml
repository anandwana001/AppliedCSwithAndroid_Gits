<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.infantlearning.infantlearning.Alphabet16">

    <Button
        android:id="@+id/button133"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="21dp"
        android:text="Previous"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/button134"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button133"
        android:layout_marginRight="22dp"
        android:text="Next"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView125"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button134"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button134"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="17dp"
        android:text="P p"
        android:textSize="100dp" />

    <TextView
        android:id="@+id/textView126"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button134"
        android:layout_alignEnd="@+id/imageView64"
        android:layout_alignRight="@+id/imageView64"
        android:layout_marginBottom="57dp"
        android:text="Parrot"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/imageView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button133"
        android:layout_alignStart="@+id/button133"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/parrot" />
</RelativeLayout>
