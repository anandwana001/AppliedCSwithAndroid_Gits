<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.infantlearning.infantlearning.Alphabet10">

    <Button
        android:id="@+id/button121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:text="Previous"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/button122"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button121"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="Next"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView113"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button122"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button122"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:text="J j"
        android:textSize="100dp" />

    <TextView
        android:id="@+id/textView114"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button122"
        android:layout_alignEnd="@+id/textView113"
        android:layout_alignRight="@+id/textView113"
        android:layout_marginBottom="77dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="Jug"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/imageView59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button121"
        android:layout_marginBottom="35dp"
        android:layout_toLeftOf="@+id/textView113"
        android:layout_toStartOf="@+id/textView113"
        app:srcCompat="@drawable/jug" />
</RelativeLayout>
