<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.infantlearning.infantlearning.Alphabet12">

    <Button
        android:id="@+id/button125"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:text="Previous"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/button126"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button125"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Next"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView117"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView118"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView118"
        android:layout_marginTop="12dp"
        android:text="L l"
        android:textSize="100dp" />

    <TextView
        android:id="@+id/textView118"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button126"
        android:layout_alignEnd="@+id/button126"
        android:layout_alignRight="@+id/button126"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="Lion"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/imageView61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button125"
        android:layout_alignEnd="@+id/textView117"
        android:layout_alignRight="@+id/textView117"
        android:layout_marginBottom="14dp"
        app:srcCompat="@drawable/lion" />
</RelativeLayout>
